<Window x:Class="服务端.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:服务端"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <Image x:Name="imageControl"  Source="D:\desktop\tmpp\奔驰.png" Width="500" Height="100"/>
            <TextBox x:Name="messagesTextBox" Grid.Row="1" Background="White" Width="200" Height=" 50" />
        </StackPanel>
        

        <!--按钮-->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="用户地址：" FontSize="30" VerticalAlignment="Center" Margin="10, 20"></TextBlock>
            <TextBox Width="455"  Height="40"></TextBox>
            <Button Name="SendButton"
            FontSize="30" Content="发送" VerticalAlignment="Center" Margin="10, 20"></Button>
            <Button  FontSize="30" Content="广播" VerticalAlignment="Center" Margin="10, 20"></Button>
        </StackPanel>
    </Grid>
</Window>
